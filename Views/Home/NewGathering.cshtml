@model Gathering

<a href="/dashboard" class="btn btn-lg btn-primary mb-5">Dashboard</a>
<a href="/logout" class="btn btn-lg btn-danger mb-5">Logout</a>

<div class="card mt-5">
    <div class="card-header bg-primary text-white">Create An Activity</div>
    <div class="card-body">
        <form action="/gathering/create" method="post">
            <label>Title:</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-primary"></span>

            <label>Date & Time:</label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-primary"></span>

            <label>Duration:</label>
            <input asp-for="DurationInt" class="form-control" />
            <span asp-validation-for="DurationInt" class="text-primary"></span>

            <label></label>
            <select asp-for="DurationStr" class="form-control">
                <option value="Hours">Hours</option>
                <option value="Minutes">Minutes</option>
                <option value="Days">Days</option>
            </select>
            <span asp-validation-for="DurationStr" class="text-primary"></span>

            <label>Location:</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-primary"></span>


            <label>Description:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

            <input type="submit" value="Create Activity" class="btn btn-outline-primary m-2">
        </form>
    </div>
</div>